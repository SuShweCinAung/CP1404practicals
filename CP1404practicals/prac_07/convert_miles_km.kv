BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to kilometres'
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)